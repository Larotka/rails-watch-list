<div class="bannier">
  <h1>New List</h1>
</div>

<div class="container">
  <div class="row">
    <%= simple_form_for @list, :html=> { class: 'new-bookmark-form col-8 mx-auto pt-4' } do |f| %>
      <%= f.input :name, :label => 'Your list name please' %>
      <div>
        <%= f.input :photo, as: :file %>
      </div>
      <div class="row">
        <%= f.button :submit, :class => "col-2 mx-auto btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>
